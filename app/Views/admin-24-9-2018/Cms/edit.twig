      <h3 class="m-subheader__title "> {{ cms_data.title}} </h3>
    </div>
    <div> </div>
  </div>
</div>
<!-- END: Subheader -->
<div class="m-content"> 
  
  <!--Begin::Section-->
  <div class="row">
    <div class="col-xl-12"> 
      <!--begin::Portlet-->
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title"> <span class="m-portlet__head-icon m--hide"> <i class="la la-gear"></i> </span>
              <h3 class="m-portlet__head-text"> {{ cms_data.title}} </h3>
            </div>
          </div>
        </div>
        <!--begin::Form-->
        <form class="m-form" id="edit_cms_from">
          <div class="m-portlet__body">
            <div class="m-form__section m-form__section--first">
              <div class="row">
                <div class="form-group  col-md-6">
                 <label class="control-label" for=""> Enter Title</label>
                 
                  <input type="text" name="title" id="title" class="form-control" value="{{ cms_data.title}}"  >
                   </div>
              </div>
              
              
              
              
              <div class="row">
                <div class="form-group  col-md-12">
                  <label class="control-label" for=""> Enter Description</label>
                  <textarea class="form-control summernote" id="m_summernote_1" name="description" rows="1">{{ cms_data.description }}</textarea>
                </div>
              </div>
          
              
              <div id="mesg_div_cms"></div>
            </div>
          </div>
          <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions">
              <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-10">
                 
                  <input type="hidden" name="id" id="id" value="{{ cms_data.id }}">
                  <button type="button" class="btn btn-primary" onclick="return updateCms();"> Save Changes </button>
                  <button type="button" class="btn btn-secondary" onclick="history.back(-1);"> Cancel </button>
                </div>
              </div>
            </div>
          </div>
        </form>
        <!--end::Form--> 
      </div>
      <!--end::Portlet--> 
      
