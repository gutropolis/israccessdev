{% if catSlider|length >  0 %}
<!-- Carousel Section Start Here    		    ==================================================--> 
     {% for categoryarr in catSlider %}
           <div class="ligneSection {% if loop.index%2 == 0 %} ligneSection-white  {% else %} ligneSection {% endif %}    ">
             <div class="container">
                <div class="row">
                     
									<div class="col-lg-12">
										<h2>{{categoryarr.home_slider_title}}</span></h2>
									</div> 
											 <div class="owl-carousel owl-theme">	
														{% for event in categoryarr.eventList %} 
														 <div class="item">
															 <div class="col-lg-12">
																<div class="ligneBox">
																		<div class="ligneImg"><img src="{{ egImgURL}}{{event.group_picture }}"></div>
																		<div class="lignedetails">
																			<h1>{{event.event_group_title}}</h1>                                    
																			<p><span>en tournée</span> à partir du {{event.event_group_begin }}</p>
																			
																			<div class="showonhover"><a href="{{ path_for('eventgroupdetail', { 'id':  event.event_group_id }) }}">RÉSERVER</a></div>
																		</div>
																</div>
															 </div>
															</div> 
														{% endfor %}
													     <div class="item">
															 <div class="col-lg-12">
																<div class="ligneBox tousbox">
																	 <h4>tous nos évènements</h4>
																	 <ul>
																		{% if sectionSlider|length >  0 %}
																			{% for cat in sectionSlider %}  
																			  <li><a href="{{ path_for('category-events', { 'id':  cat.id }) }}"  {% if categoryarr.catID ==   cat.id %}class="active"{% endif %} >{{ cat.name }}</a></li>
																				
																			{% endfor %}
																		{% endif %}
			 
																	 </ul>
																</div>
															 </div>
														</div> 
											</div>   
								                     
                </div>
             </div>
        	</div>
           
<!-- Carousel Section Start Here    		    ==================================================--> 	
	{% endfor %}	   
 {% endif %}