	<script> 
	$( "#mailchimpsub" ).click(function() {
					var communiemail = $("#communiemail").val();
					 $(this).attr('disabled');
					   

				    $.ajax({
							type: "get",
							url: '{{ base_url() }}/mailchim-sub',
							data: { email:communiemail },  
							success: function( data ) {
								//var obj = jQuery.parseJSON( data);
								 var obj = data;
								 console.log(obj.status);console.log(obj.msg);
								 $("#mailchimp_msg").html(obj.msg);
								 $(this).attr('enabled');
								 $("#communiemail").val('');
								return false;
							}
					});
					return false;
					 
		});
	
		$( "#btnloginpopup1" ).click(function() {
					var forgetemail = $("#forgetemail").val();
					
					   

				    $.ajax({
							type: "get",
							url: '{{ base_url() }}/forget-pwd',
							data: { email:forgetemail },  
							success: function( data ) {
								//var obj = jQuery.parseJSON( data);
								 var obj = data;
								console.log(obj.status);console.log(obj.msg);
								if(obj.status === '1'){
									$("#forget_result").html('<div class="alert alert-info" role="alert"> '+obj.msg+'.</div>');
									
									 
									
									
								}else{
									$("#forget_result").html('<div class="alert alert-danger" role="alert"> '+obj.msg+'.</div>');
								}
								
								return false;
							}
					});
					return false;
					 
		});
		 
		
		$("#myformpopup").submit(function(){
			  
			   //alert('Welcome to full registration');
				 
					var email = $("#emailpopup").val();
					var password = $("#passwordpopup").val();
					 
				    $.ajax({
							type: "get",
							url: '{{ base_url() }}/login',
							data: { email:email, password:password },  
							success: function( data ) {
								//var obj = jQuery.parseJSON( data);
								 var obj = data;
								console.log(obj.status);console.log(obj.msg);
								if(obj.status === '1'){
									$("#loginpop_result").html('<div class="alert alert-info" role="alert">'+obj.msg+'.</div>');
									 location.reload(true);
									//location.href ='{{base_url()}}/mon-compte/mes-commandes';
									
									
								}else{
									$("#loginpop_result").html('<div class="alert alert-danger" role="alert">'+obj.msg+'.</div>');
								}
								
								return false;
							}
					});
					return false;
		   
		});  
	</script>	
		
