{% extends "admin/layouts/layout-admin.twig" %}


{% block maincontent %} 

<link href="{{ base_url() }}/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
<link href="{{ base_url() }}/assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
<style type="text/css">
.has_error{
  border-color:red !important;
}
</style>
<!-- BEGIN: Subheader -->
<div class="m-subheader ">
  <div class="d-flex align-items-center">
    <div class="mr-auto">
      <h3 class="m-subheader__title "> {{ title }} for {{eventname}} in {{auditoriumname}}</h3>
    </div>
    <div>  </div>
  </div>
</div>
<!-- END: Subheader -->
<div class="m-content"> 
  <!--Begin::Section-->
  <div class="row">
    <div class="col-xl-12"> 
      <!--begin::Portlet-->
       <table class="table" > 
         <thead>
            <tr>
                <th>ID</th>
                <th>Seat Number</th>
                <th>Section</th>
                <th>Range</th>
                <th>Price</th>
                <th>Status</th>
                <th>Actions</th>
            <tr/>
         </thead>
        <tbody>
        {% for seat in seats %}
        <tr>
            <td>{{seat.unique_id}}</td>
            <td>{{seat.name}}</td>
            <td>{{seat.area}}</td>
            <td>{{seat.row}}</td>
            <td>{{seat.price}}</td>
            <td>{{seat.status}}</td>
            <td><a href="#"<i class="la la-edit"></i></a></td>
        </tr>
        {% endfor %}
        </tbody>
       </table> 
      <!--end::Portlet--> 
    </div>
  </div>
</div>
{% endblock %}
{% block footerscripts %} 
<!--begin::Page Vendors --> 

<script src="{{ base_url() }}/assets/admin/dynamic_datatables/data-ajax-admin-category.js" type="text/javascript"></script>

<!--end::Page Snippets --> 
