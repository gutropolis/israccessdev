{% extends "admin/layouts/layout-admin.twig" %}
{% block maincontent %}
<style type="text/css">
.has_error{
  border-color:red !important;
}
</style>
<!-- BEGIN: Subheader -->
<div class="m-subheader ">
  <div class="d-flex align-items-center">
    <div class="mr-auto">
      <h3 class="m-subheader__title "> {{ title}} </h3>
    </div>
    <div> </div>
  </div>
</div>
<!-- END: Subheader -->
<div class="m-content">  
  <!--Begin::Section-->
  <div class="row">
    <div class="col-xl-12"> 
      <!--begin::Portlet-->
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title"> <span class="m-portlet__head-icon m--hide"> <i class="la la-gear"></i> </span>
              <h3 class="m-portlet__head-text"> {{ title}} </h3>
            </div>
          </div>
        </div>
        <!--begin::Form-->
        <form class="m-form" id="edit_event_group_from" enctype="multipart/form-data">
          <div class="m-portlet__body">
            <div class="m-form__section m-form__section--first">
			  <table class="table table-sm m-table m-table--head-bg-brand">
											<thead class="thead-inverse">
												<tr>
													<th>{{ adminLang.coupon_name_txt }}</th>
													<th>{{ adminLang.coupon_code_txt}}</th>
													<th>{{ adminLang.coupon_discount_type_txt }}</th>
													<th>{{ adminLang.coupon_discunt_amount_txt }}</th>
													<th>{{ adminLang.coupon_expiration_date_txt }}</th>
													<th>{{ adminLang.coupon_used_txt }}</th>
													<th>{{ adminLang.coupon_status_txt_txt }}</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td> {{ coupon.coupon_name }}</td>
													<td> {{ coupon.coupon_code }}</td>
													<td> {{ coupon.discount_type }}</td>
													<td> {{ coupon.discount_amount }}</td>
													<td> {{ coupon.expiration_date }}</td>
													<td> {{ coupon.coupon_used }}</td>
													<td> {% if(coupon.status == 1) %}
													<span class="m-badge m-badge--success m-badge--wide">
								Active
							</span>
													     {% else %}
														 <span class="m-badge m-badge--danger m-badge--wide">
								Inactive
							</span>
														 {% endif %}
													</td>
												</tr>
												
											</tbody>
										</table>
            </div>
          </div>
          <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions">
              <div class="col-md-12">
                <!--begin: Datatable -->
				<div class="m_datatable_coupons_list" id="ajax_data"></div>
				<!--end: Datatable -->
              </div>
            </div>
          </div>
        </form>
        <!--end::Form--> 
      </div>
      <!--end::Portlet--> 
      <!--begin::Portlet-->
      
      <!--end::Portlet--> 
    </div>
  </div>
</div>
