<div class="modal fade" id="modal-edit-event">
  <style type="text/css">
.note-editor.note-frame .note-editing-area .note-codable{
 padding-top:22px !important;
}
</style>
  <style type="text/css">
.rowdivEdit li {
    width: 33.3%;
    float: left;
    list-style-type: none;
    margin-bottom: 13px;
}


</style>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form name="form_add_event_frm_update" id="form_add_event_frm_update" method="post"  autocomplete="Off">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Update Event</h4>
        </div>
        <div class="modal-body">
          <div class="" id="mesg_div_event_up"></div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="control-label" for=""> Display Order</label>
              <input type="text" class="form-control" id="display_order_edit" name="display_order" 
              placeholder="Enter Event Display order">
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <label class="control-label" for=""> Show In Section</label>
              <select class="form-control" name="show_in_section" id="show_in_section_edit">
                <option value="1">Events</option>
                <option value="2">Event Day Page</option>
                <option value="3">Don't Miss Page</option>
              </select>
            </div>
            <div class="form-group col-md-6">
              <label class="control-label" for=""> Select Section</label>
              <select class="form-control" name="section" id="section_edit">
                <option value="1">Section 1</option>
                <option value="2">Section 2</option>
                <option value="3">Section 3</option>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 ">
              <label class="control-label" for=""> Enter Title</label>
              <input type="text" class="form-control" id="title_event_edit" name="title_event" placeholder="Enter Event Title">
            </div>
            <div class="form-group  col-md-6 ">
              <label class="control-label" for=""> Select Date</label>
              <input type="text" class="form-control date_begin m-input datepicker_class" id="date_event_edit" readonly placeholder="Select date" name="date_event"/>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <label class="control-label" > Select City</label>
              <br>
              <select name="city_id" id="m_select2_3_edit" class="form-control city_id city_edit m-select2" style="width:100%" >
                <option value="">N/A</option>
                
                   {% if cities_list %}
                    {% for row in cities_list %}                    
                    
                <option value="{{ row.id }}" >{{ row.name }}</option>
                
                   {% endfor %} 
                   {% endif %}
              
              </select>
            </div>
            <div class="form-group col-md-6">
              <label class="control-label" > Select Auditorium </label>
              <br>
              <select class="form-control auditorium_id aud_edit m-select2" id="m_select2_4_edit"  name="auditorium_id"  style="width:100%" >
                <option value="">N/A</option>
                
               {% if auditoriums %}
                {% for row in auditoriums %}
                
                <option value="{{ row.id }}" >{{ row.name }}</option>
                
               {% endfor %} 
               {% endif %}
              
              </select>
            </div>
          </div>
          <div class="row">
            <div class="form-group  col-md-12">
              <label class="control-label" for=""> Enter Description</label>
              <textarea class="form-control overview_Desc summernote" id="m_summernote_3_edit" name="description" rows="1"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 ">
              <label class="control-label" for=""> Enter Artists</label>
              <input type="text" class="form-control" id="artist_name_ev" name="artist_name" placeholder="Enter Artist" >
            </div>
            <div class="form-group  col-md-6 ">
              <label class="control-label" for=""> Enter Authors</label>
              <input type="text" class="form-control" id="author_name_ev" name="author_name" placeholder="Enter Authors" >
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 ">
              <label class="control-label" for=""> Enter Productors</label>
              <input type="text" class="form-control" id="productor_name_ev" name="productor_name" placeholder="Enter Productors" >
            </div>
            <div class="form-group  col-md-6 ">
              <label class="control-label" for=""> Enter Directors</label>
              <input type="text" class="form-control" id="director_name_ev" name="director_name" placeholder="Enter Directors">
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 ">
              <label class="control-label" for=""> Enter Contributor</label>
              <input type="text" class="form-control" id="contributor_name_ev" name="contributor_name" placeholder="Enter Contributor">
            </div>
            <div class="form-group  col-md-6 ">
              <label class="control-label" for=""> Contributor Description</label>
              <textarea type="text" class="form-control" id="contributor_description_ev" name="contributor_description" ></textarea>
            </div>
          </div>
          <hr>
          <h3>Event Pictures</h3>
          <hr>
          <div class="row">
            <div class="rowdivEdit">
              <div id="small-img" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center">
                <ul class="pic-list-edit">
                </ul>
              </div>
            </div>
          </div>
          <hr>
          <table id="myTableEdit" class=" table order-list-edit">
            <thead>
              <tr>
                <td>Event Pictures</td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="col-sm-4"><input type="file" class="form-control m-input" name="event_img[]" id="event_img_0"></td>
                <td class="col-sm-2"></td>
              </tr>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="5" style="text-align: left;"><div id="addrowEdit" class="btn btn btn-sm btn-brand m-btn m-btn--icon m-btn--pill m-btn--wide"> <span> <i class="la la-plus"></i> <span> Add More</span> </span> </div></td>
              </tr>
              <tr> </tr>
            </tfoot>
          </table>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id_event_edit" id="id_event_edit" value="{{ event.id }}">
          <input type="hidden" name="eventgroup_id_edit" id="eventgroup_id_edit" value="{{ event_detail.id }}">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="return updateEvent();">Save changes</button>
        </div>
      </form>
    </div>
    <!-- /.modal-content --> 
  </div>
  <!-- /.modal-dialog --> 
</div>
