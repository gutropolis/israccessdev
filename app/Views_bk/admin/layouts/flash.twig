
{% for flmsg_type, flmsgs in flash.getMessages() %}
    {% for flmsg in flmsgs %}
        <div class="alert alert-{{ flmsg_type }} alert-dismissible fade show" role="alert">
            {{ flmsg | raw }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endfor %}
