{% if catSlider|length >  0 %}
<!-- Carousel Section Start Here    		    ==================================================--> 
     {% for categoryarr in catSlider %}
           <div class="ligneSection {% if loop.index%2 == 0 %} ligneSection-white  {% else %} ligneSection {% endif %}    ">
             <div class="container">
                <div class="row">
                    
						<div class="col-lg-12">
							<h2>{{categoryarr.home_slider_title|raw}}</h2>
						</div> 
						 <div class="owl-carousel owl-theme">	
									{% for event in categoryarr.eventList %} 
									 <div class="item">
										 <div class="col-lg-12">
											<div class="ligneBox">
													<div class="ligneImg">
													{%if event.event_group_status==0%}
													<a href="javascript:void(0);">
													<img src="{{ egImgURL}}{{event.group_picture }}">
													</a>
													{%else%}
													<a href="{{ path_for('eventgroupdetail', { 'id':  event.event_group_id }) }}">
													<img src="{{ egImgURL}}{{event.group_picture }}">
													</a>
													{%endif%}
													</div>
													<div class="lignedetails">
														<h1>{{event.event_group_cardtitle|raw}}</h1>                                    
														<p>{%if event.event_city!=''%}
														<span>
														{{event.event_city.name}}
														</span>
														{%endif%}
														
														{%if event.event_f_t!=''%}
														<span> 
														 {%if event.event_group_total_events > 1 %} En tournée{%else%}{{event.event_group_cityname}}{%endif%} 
														</span> 
														{{event.event_f_t |raw}}</p>
														{%endif%}
														<div class="showonhover">
														{%if event.event_group_status==0%}
														<a href="javascript:void(0);"> BIENTÔT DISPONIBLE</a>
														{%else%}
														<a href="{{ path_for('eventgroupdetail', { 'id':  event.event_group_id }) }}">RÉSERVER</a>
														{%endif%}
														</div>
													</div>
											</div>
										 </div>
										</div>  
									{% endfor %}
									 <div class="item">
										 <div class="col-lg-12">
											<div class="ligneBox tousbox">
												 <h4>tous nos évènements</h4>
												 <ul>
													{% if sectionSlider|length >  0 %}
														{% for cat in sectionSlider %}  
														  <li><a href="{{ path_for('category-events', { 'id':  cat.id }) }}"  {% if categoryarr.catID ==   cat.id %}class=""{% endif %} >{{ cat.name }}</a></li>
															
														{% endfor %}
													{% endif %}

												 </ul>
											</div>
										 </div>
									</div> 
						</div>   
								                     
                </div>
             </div>
        	</div>
           
<!-- Carousel Section Start Here    		    ==================================================--> 	
	{% endfor %}	   
 {% endif %}