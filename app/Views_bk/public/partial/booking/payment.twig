<div class="carttable">
    {% for pcart in cart_products %}
	<div id="repeatble">
        <div class="cartaction">
            <ul>
                <li><a href="#"><input name="" type="radio" value=""></a></li>
                <li><a href="#"><i class="fas fa-trash-alt"></i></a></li>
            </ul>
        </div>
        <div class="cartimg">
            <a href="#"><img src="{{ base_url() }}/assets/assets/img/book-2.png" ></a>
        </div>
        <div class="cartdetails">
            <div class="cartItem">
                <h2>Evenement</h2>
                <div class="evencon">
                    <p>{{pcart.event_name}}</p>
                </div>
            </div>
            <div class="cartlefu">
                <h2>Lieu   </h2>
                <div class="evencon">
                    <p>{{pcart.event_auditorium_address}}</p>
                </div>
            </div>
            <div class="cartdate">
                <h2>  date </h2>
                <div class="evencon">
                    <p>{{pcart.event_date}}</p>
                </div>
            </div>
            <div class="cartnbre">
                <h2>Nbre de places </h2>
                <div class="evencon">
                    <p>{{pcart.qtx}}places</p>
                </div>
            </div>
            <div class="cartcat">
                <h2>Categorie</h2>
                <div class="evencon">
                    <P>{{pcart.ticket_type}}</P>
                </div>
            </div>
            <div class="cartprice">
                <h2>Prix/Place</h2>
                <div class="evencon">
                    <p><b>{{pcart.price}}$</b></p>
                </div>
            </div>
        </div>
		</div>
    {%endfor%}
    <div class="actionsection">
        <div class="asCon">
            <div class="asLT">
                <p>MONTANT TOTAL des billets</p>
            </div>
            <div class="asRT">

                <p><b>{{ total }}$</b></p>
            </div>
        </div>
        <div class="asCon">
            <div class="asLT">
                <p>frais de réservation</p>
            </div>
            <div class="asRT">
                <p><b>2x15$</b></p>
            </div>
        </div>


        <div class="asCon blackcol">
            <div class="asLT">
                <p>RESTE À RÉGLER</p>
            </div>
            <div class="asRT">
                <p><b>{{totalamount}}$</b></p>
            </div>
        </div>

        <a href="#" data-toggle="modal" data-target="#Modal3" class="commandelink"><i class="fas fa-lock"></i> &nbsp;&nbsp;&nbsp; valider ma réservation <span>(paiement sécurisé)</span></a>
    </div>
</div>
</div>
